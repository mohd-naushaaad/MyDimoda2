<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/main_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <android.support.v4.widget.DrawerLayout
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white" >

            <RelativeLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RelativeLayout
                    android:id="@+id/title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#f7f7f7" >

                    <Button
                        android:id="@+id/menu_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/btn_menu_sel" />

                    <TextView
                        android:id="@+id/title_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Detail"
                        android:textColor="#000000"
                        android:textSize="25sp" />

                    <RelativeLayout
                        android:id="@+id/back_layout"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true" >

                        <TextView
                            android:id="@+id/back_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@id/back_btn"
                            android:text="Back"
                            android:textColor="@color/color_black"
                            android:textSize="20sp" />

                        <ImageButton
                            android:id="@+id/back_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/back_btn" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/line_view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#878787" >
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/title_layout"
                    android:background="#ffffff"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/product_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="2"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:id="@+id/star_layout"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/product_title"
                        android:layout_marginTop="5dp"
                        android:weightSum="100" >

                        <ImageView
                            android:id="@+id/star_img1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="20"
                            android:padding="2dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/img_star" />

                        <ImageView
                            android:id="@+id/star_img2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="20"
                            android:padding="2dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/img_star" />

                        <ImageView
                            android:id="@+id/star_img3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="20"
                            android:padding="2dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/img_star" />

                        <ImageView
                            android:id="@+id/star_img4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="20"
                            android:padding="2dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/img_star" />

                        <ImageView
                            android:id="@+id/star_img5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="20"
                            android:padding="2dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/img_star" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/price_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/star_layout"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Price : $$27.00"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/button_layout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="5dp"
                        android:weightSum="100" >

                        <Button
                            android:id="@+id/my_style_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="48"
                            android:background="@drawable/button_gray_rounded"
                            android:text="myStyle"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4" />

                        <Button
                            android:id="@+id/buy_style_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="48"
                            android:background="@drawable/button_gray_rounded"
                            android:text="Buy myStyle"
                            android:textColor="#000000"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/product_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@id/button_layout"
                        android:layout_below="@id/price_txt"
                        android:layout_margin="5dp"
                        android:background="@drawable/white_border"
                        android:padding="5dp"/>
                        <!-- android:scaleType="centerInside"  -->
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/menu_layout"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:background="@drawable/menu_bg"
                android:orientation="vertical" >

                <ListView
                    android:id="@+id/menu_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@drawable/empty"
                    android:dividerHeight="2dp"
                    android:listSelector="@drawable/listitem_selector"
                    android:paddingTop="60dp" >
                </ListView>
            </LinearLayout>
        </android.support.v4.widget.DrawerLayout>
    </RelativeLayout>

</RelativeLayout>