<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<item android:id="@android:id/background">
    <shape>
        <corners android:radius="5dip" />
        <gradient
                android:startColor="#ffe0ce7c"
                android:centerColor="#ffc8a201"
                android:centerY="0.75"
                android:endColor="#ffc8a201"
                android:angle="270"
        />
    </shape>
</item>

<item android:id="@android:id/secondaryProgress">
    <clip>
        <shape>
            <corners android:radius="5dip" />
            <gradient
                    android:startColor="#80e0ce7c"
                    android:centerColor="#a0c8a201"
                    android:centerY="0.75"
                    android:endColor="#a0c8a201"
                    android:angle="270"
            />
        </shape>
    </clip>
</item>
<item
    android:id="@android:id/progress"
>
    <clip>
        <shape>
            <corners
                android:radius="5dip" />
            <gradient
                android:startColor="#e0ce7c"
                android:endColor="#c8a201"
                android:angle="270" />
        </shape>
    </clip>
</item>

</layer-list>