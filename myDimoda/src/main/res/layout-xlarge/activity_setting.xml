<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

            <RelativeLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="#f7f7f7">

                    <Button
                        android:id="@+id/menu_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/btn_menu_sel" />

                    <TextView
                        android:id="@+id/title_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Settings"
                        android:textColor="#000000"
                        android:textSize="50sp" />

                    <RelativeLayout
                        android:id="@+id/back_layout"
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true">

                        <TextView
                            android:id="@+id/back_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@id/back_btn"
                            android:text="Back"
                            android:textColor="@color/color_black"
                            android:textSize="40sp" />

                        <ImageButton
                            android:id="@+id/back_btn"
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/back_btn" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/line_view"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:background="#878787"></RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/title_layout"
                    android:background="#efeff4">

                    <RelativeLayout
                        android:id="@+id/restore_layout"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="80dp"
                        android:background="@drawable/btn_list_sel">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#878787" />

                        <ImageView
                            android:id="@+id/restore_img"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/restore" />

                        <TextView
                            android:id="@+id/restore_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:layout_toRightOf="@id/restore_img"
                            android:text="Restore Purchase"
                            android:textColor="#000000"
                            android:textSize="40sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_alignParentBottom="true"
                            android:background="#878787" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/intro_layout"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_below="@id/restore_layout"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/btn_list_sel">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#878787" />

                        <ImageView
                            android:id="@+id/intro_img"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_intro" />

                        <TextView
                            android:id="@+id/intro_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:layout_toRightOf="@id/intro_img"
                            android:text="Help"
                            android:textColor="#000000"
                            android:textSize="40sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_alignParentBottom="true"
                            android:background="#878787" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rate_layout"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_below="@id/intro_layout"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/btn_list_sel">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#878787" />

                        <ImageView
                            android:id="@+id/logout_img"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/rate_app_icon" />

                        <TextView
                            android:id="@+id/rate_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:layout_toRightOf="@id/logout_img"
                            android:text="@string/setting.rate"
                            android:textColor="#000000"
                            android:textSize="40sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:background="#878787" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/setting_notification_layout"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_below="@id/rate_layout"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/btn_list_sel">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#878787"
                            android:id="@+id/view" />

                        <ImageView
                            android:id="@+id/logout_img"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/notification" />

                        <TextView
                            android:id="@+id/rate_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:layout_toRightOf="@id/logout_img"
                            android:text="@string/setting.notification"
                            android:textColor="#000000"
                            android:textSize="40sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:background="#878787" />


                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/setting_notification_toggleButton"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:clickable="false"
                            android:layout_marginRight="98dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="98dp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#878787" />

                    <RelativeLayout
                        android:id="@+id/logout_layout"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_below="@id/setting_notification_layout"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/btn_list_sel">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#878787" />

                        <ImageView
                            android:id="@+id/logout_img"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/logout" />

                        <TextView
                            android:id="@+id/logout_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:layout_toRightOf="@id/logout_img"
                            android:text="Log Out"
                            android:textColor="#000000"
                            android:textSize="40sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_alignParentBottom="true"
                            android:background="#878787" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/menu_layout"
                android:layout_width="600dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:background="@drawable/menu_bg"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/menu_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@drawable/empty"
                    android:dividerHeight="2dp"
                    android:listSelector="@drawable/listitem_selector"
                    android:paddingTop="120dp"></ListView>
            </LinearLayout>
        </androidx.drawerlayout.widget.DrawerLayout>
    </RelativeLayout>

</RelativeLayout>