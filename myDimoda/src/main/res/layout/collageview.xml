<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <FrameLayout
        android:id="@+id/collage_1"
        android:layout_width="@dimen/collage_width"
        android:layout_height="@dimen/collage_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/collage_margin_bottom"
        android:layout_marginLeft="@dimen/collage_margin_i"
        android:layout_marginRight="@dimen/collage_margin_bottom"
        android:layout_marginTop="@dimen/collage_margin_i"
        android:background="@drawable/photo_bg"
        android:paddingLeft="@dimen/collage_padding_left"
        android:paddingRight="@dimen/collage_padding_right">

        <ImageView
            android:id="@+id/collage_image_1"
            android:layout_width="@dimen/collage_image_size"
            android:layout_height="@dimen/collage_image_size"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="@dimen/collage_padding_top"
            android:scaleType="centerCrop"

            android:src="@drawable/findme_bg" />

        <TextView
            android:id="@+id/collage_1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="@dimen/collage_txt_margin"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/black"

            android:textSize="@dimen/collage_txt_size" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/collage_4"
        android:layout_width="@dimen/collage_width"
        android:layout_height="@dimen/collage_height"
        android:layout_alignTop="@+id/collage_3"
        android:layout_toEndOf="@+id/collage_1"
        android:layout_toRightOf="@+id/collage_1"
        android:background="@drawable/photo_bg"
        android:paddingLeft="@dimen/collage_padding_left"
        android:paddingRight="@dimen/collage_padding_right"
        android:paddingTop="@dimen/collage_padding_top"
        android:visibility="visible">

        <TextView
            android:id="@+id/collage_4_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="@dimen/collage_txt_margin"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/black"

            android:textSize="@dimen/collage_txt_size" />

        <ImageView
            android:id="@+id/collage_image_4"
            android:layout_width="@dimen/collage_image_size"
            android:layout_height="@dimen/collage_image_size"
            android:layout_gravity="center_horizontal|top"
            android:scaleType="centerCrop"
            android:src="@drawable/findme_bg" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/collage_3"
        android:layout_width="@dimen/collage_width"
        android:layout_height="@dimen/collage_height"
        android:layout_below="@+id/collage_1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/collage_margin_i"
        android:layout_marginRight="@dimen/collage_margin_bottom"
        android:layout_marginTop="-16dp"
        android:layout_toLeftOf="@id/collage_4"
        android:background="@drawable/photo_bg"
        android:paddingLeft="@dimen/collage_padding_left"
        android:paddingRight="@dimen/collage_padding_right"
        android:paddingTop="@dimen/collage_padding_top"
        android:visibility="visible">

        <TextView
            android:id="@+id/collage_3_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="@dimen/collage_txt_margin"
            android:gravity="center"

            android:text=""
            android:textColor="@android:color/black"
            android:textSize="@dimen/collage_txt_size" />

        <ImageView
            android:id="@+id/collage_image_3"
            android:layout_width="@dimen/collage_image_size"
            android:layout_height="@dimen/collage_image_size"
            android:layout_gravity="center_horizontal|top"
            android:scaleType="centerCrop"
            android:src="@drawable/findme_bg" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/collage_2"
        android:layout_width="@dimen/collage_width"
        android:layout_height="@dimen/collage_height"
        android:layout_alignTop="@+id/collage_1"
        android:layout_marginRight="28dp"
        android:layout_toRightOf="@id/collage_1"
        android:background="@drawable/photo_bg"
        android:paddingLeft="@dimen/collage_padding_left"
        android:paddingRight="@dimen/collage_padding_right"
        android:paddingTop="@dimen/collage_padding_top">

        <TextView
            android:id="@+id/collage_2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="@dimen/collage_txt_margin"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="@dimen/collage_txt_size" />

        <ImageView
            android:id="@+id/collage_image_2"
            android:layout_width="@dimen/collage_image_size"
            android:layout_height="@dimen/collage_image_size"
            android:layout_gravity="center_horizontal|top"
            android:scaleType="centerCrop"
            android:src="@drawable/findme_bg" />
    </FrameLayout>
</RelativeLayout>