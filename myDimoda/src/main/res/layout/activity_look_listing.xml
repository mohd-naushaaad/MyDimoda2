<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_wight"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/img_padd"
            android:src="@drawable/share" />

        <com.mydimoda.customView.Existence_Light_TextView
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/back_layout"
            android:layout_toRightOf="@id/iv_share"
            android:gravity="center"
            android:text="Styling"
            android:textColor="#000000"
            android:textSize="@dimen/normal_text_size" />

        <LinearLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <com.mydimoda.customView.Existence_Light_TextView
                android:id="@+id/back_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Back"
                android:textColor="@color/color_black"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/back_btn" />
        </LinearLayout>
    </RelativeLayout>

    <com.mydimoda.customView.BrixtonLightText
        android:id="@+id/tv_for_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_layout"
        android:paddingBottom="@dimen/txt_padd"
        android:paddingTop="@dimen/txt_padd"
        android:text="Suggested looks for USA Business trip" />

    <android.support.v7.widget.RecyclerView
        android:clipToPadding="false"
        android:id="@+id/rv_looklisting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_for_trip"
        tools:listitem="@layout/item_trip_looks" />
</RelativeLayout>