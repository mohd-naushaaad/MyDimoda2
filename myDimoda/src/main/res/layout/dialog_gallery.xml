<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <TextView
        android:id="@+id/dialog_gal_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:padding="12dp"
        android:singleLine="true"
        android:text="@string/welcome"
        android:textColor="@color/cardview_dark_background"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/dialog_gal_title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/cardview_dark_background"
        android:layout_below="@+id/dialog_gal_title"
        android:gravity="center"
        android:text="@string/dialog.gallery.title"
        android:textSize="14sp" />


    <GridView
        android:id="@+id/dialog_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_gal_title_txt"
        android:layout_marginTop="5dp"
        android:horizontalSpacing="10dp"
        android:listSelector="#cccccc"
        android:numColumns="3"
        android:padding="@dimen/activity_horizontal_margin"
        android:verticalSpacing="10dp"></GridView>

</RelativeLayout>