<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_rectangle_white">


    <ImageView
        android:id="@+id/dialog_gal_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:padding="12dp"
        android:src="@drawable/cross" />

    <TextView
        android:id="@+id/dialog_gal_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:padding="12dp"
        android:singleLine="true"
        android:text="@string/welcome"
        android:textColor="@color/color_black_light"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/dialog_gal_title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_gal_title"
        android:gravity="center"
        android:text="@string/dialog.gallery.title"
        android:textColor="@color/help_view"
        android:textSize="14sp" />


    <GridView
        android:id="@+id/dialog_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dialog_gallery_tv"
        android:layout_below="@id/dialog_gal_title_txt"
        android:layout_marginBottom="38dp"
        android:horizontalSpacing="10dp"
        android:listSelector="#cccccc"
        android:numColumns="3"
        android:padding="@dimen/activity_horizontal_margin"
        android:verticalSpacing="10dp">

    </GridView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/dialog_gallery_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/black_border"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="GALLERY"
            android:textColor="@color/color_black_light"
            android:textSize="18sp" />
    </FrameLayout>

</RelativeLayout>